<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Admin</th>
      <th>Number of Members</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clubs.each do |club| %>
      <tr>
