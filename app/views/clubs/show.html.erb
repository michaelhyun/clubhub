	h4,p{
		padding-left:435px;
	}
</style>
<br><br><br><br><br><br><br><br>
        <img id="bannerTemp" src="/assets/images.jpg"/>
<div id="background">
<br><br>
<p id="notice"><%= notice %></p>
<center><h1 style="font-size:50px">
  <% @club = Club.find(params[:id]) %>
  <%=@club.name%>
	</h1></center>
	<div style="float:left"><img style="padding-left:100px" src="http://www.sjsu.edu/provost/pics/SJSU%20University%20Spirit%20mark_Web_Blue.png" width="300px" height="auto"></div>
<h4> Admin:</h4><p><%=@club.admin%></p>
<p>
  <h4> Category </h4>
 <p> <%=@club.category.try(:genre)%>
</p>
<p>
  <h4> Number of Members </h4>
 <p> <%=@club.numberOfMembers%>
</p>
	
<h4> <%= link_to 'Make a New Review', new_review_path %> </h4>
	<p><%= link_to 'Back', clubs_path %></p>

<ul class="rating">
<%(1..5).each do |i|%>
<li class="rating_star" data-stars="data-club-id="<% @club.id%>" id="<%= "#{@club.id}_#{i}"%>""> </li>
	<%end%>
</ul>
	
	<% form_id = “club_#{club.id}_rating” %>
<%= form_for movie.ratings.last || club.ratings.build, :html => {:id => form_id , :class => “star_rating_form”} do |f| %>
<%= f.hidden_field :club_id %>
<%= f.hidden_field :stars, :id => form_id + “_stars” %>
<% end %>
<% (1..5).each do |i| %>
<li id=”<%= form_id %>_<%= i %>” data-stars=”<%= i %>” data-form-id=”<%= form_id %>”></li>
<% end %>
	

<br><br></div>
