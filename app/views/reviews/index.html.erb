        <img id="bannerTemp" src="/assets/images.jpg"/>
<div id="background">
<br><br>
<h1>Listing reviews</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= link_to review.comment, review_path(review.id)%></td>
        <td><%= link_to review.club.try(:name), review.club.club_path(review.club.id) %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
		    <td><%= link_to 'Delete', data: {:confirm => 'Are you sure?'}, :method => :delete %></td>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
</div>