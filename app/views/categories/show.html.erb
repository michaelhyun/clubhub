<br><br><br><br><br><br><br><br>
        <img id="bannerTemp" src="/assets/images.jpg"/>
<div id="background">

    <%  @name = Category.find(params[:id]) %>
    <center><p style="font-size:70px"><%= @name.try(:genre) + ' Clubs' %></p>

<table style="width:50%">
  <thead>
    <tr>
     
     <th>Name</th>
      <th>Club President</th>
      <th>Members</th>
      <th>Category</th>
      <th colspan="3"></th>

    </tr>
  </thead>

  <tbody>
    <%  @name = Category.find(params[:id]) %>
    <% @name.clubs.each do |club| %>
          <tr>
            <td><%= link_to(club.name, club_path(club.id)) %></td>
            <td><%= club.admin %></td>
            <td><%= club.numberOfMembers %></td>
            <td><%= club.category.try(:genre) %></td>

          </tr>
    <% end %>
        </tbody>
</table>

<br>
</div>
